{
    "extends": "tslint:recommended",
    "rules": {
        "deprecation": {
            "severity": "warning"
        },
        "component-class-suffix": true,
        "contextual-lifecycle": true,
        "directive-class-suffix": true,
        "directive-selector": [true, "attribute", "app", "camelCase"],
        "component-selector": [true, "element", "app", "kebab-case"],
        "import-blacklist": [true, "rxjs/Rx"],
        "interface-name": [true, "always-prefix"],
        "increment-decrement": true,
        "completed-docs": [true, "enums", "functions", "methods"],
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "max-classes-per-file": false,
        "newline-before-return": true,
        "linebreak-style": false,
        "jsdoc-format": [true, "check-multiline-start"],
        "max-line-length": [true, 140],
        "comment-type": [true, "doc", "singleline"],
        "max-file-line-count": [true, 400],
        "no-duplicate-imports": [true, { "allow-namespace-imports": true }],
        "arrow-return-shorthand": true,
        "unnecessary-constructor": true,
        "typedef": [
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "object-destructuring",
            "array-destructuring"
        ],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "prefer-const": [true, { "destructuring": "all" }],
        "array-type": [true, "array"],
        "member-access": false,
        "no-any": true,
        "indent": [true, "spaces", 4],
        "unnecessary-else": false,
        "switch-final-break": true,
        "prefer-switch": [true, { "min-cases": 2 }],
        "prefer-method-signature": true,
        "one-variable-per-declaration": true,
        "object-literal-shorthand": true,
        "no-boolean-literal-compare": true,
        "interface-over-type-literal": true,
        "import-spacing": true,
        "eofline": true,
        "align": [
            true,
            "parameters",
            "statements",
            "arguments",
            "elements",
            "members"
        ],
        "arrow-parens": [false],
        "no-unused-variable": true,
        "no-unused-functions": true,
        "no-magic-numbers": false,
        "no-empty-interface": true,
        "no-unused-expression": true,
        "only-arrow-functions": true,
        "whitespace": true,
        "trailing-comma": [false],
        "no-consecutive-blank-lines": [true, 2],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-console": [true, "log"],
        "no-empty": true,
        "no-inferrable-types": [true, "ignore-params"],
        "no-non-null-assertion": true,
        "no-redundant-jsdoc": false,
        "no-switch-case-fall-through": true,
        "no-var-requires": false,
        "no-string-literal": false,
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-sort-keys": false,
        "ordered-imports": [
            true,
            {
                "grouped-imports": true,
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-first",
                "module-source-path": "full"
            }
        ],
        "quotemark": [true, "double"],
        "no-conflicting-lifecycle": true,
        "no-host-metadata-property": true,
        "no-input-rename": false,
        "no-inputs-metadata-property": true,
        "no-output-native": true,
        "no-output-on-prefix": true,
        "no-output-rename": true,
        "no-outputs-metadata-property": true,
        "template-banana-in-box": true,
        "template-no-negated-async": true,
        "use-lifecycle-interface": true,
        "use-pipe-transform-interface": true,
        "naming-convention": [
            true,
            {
                "type": "default",
                "format": "camelCase",
                "leadingUnderscore": "forbid",
                "trailingUnderscore": "forbid"
            },
            {
                "type": "variable",
                "modifiers": ["global", "const"],
                "format": ["camelCase", "UPPER_CASE"]
            },
            {
                "type": "variable",
                "modifiers": ["export", "const"],
                "format": "UPPER_CASE"
            },
            {
                "type": "functionVariable",
                "modifiers": ["export", "const"],
                "format": "camelCase"
            },
            { "type": "method", "filter": "^toJSON$", "format": null },
            {
                "type": "property",
                "modifiers": ["public", "static", "const"],
                "format": "UPPER_CASE"
            },
            { "type": "type", "format": "PascalCase" },
            { "type": "interface", "prefix": "I" },
            { "type": "enumMember", "format": "PascalCase" }
        ]
    },
    "rulesDirectory": ["codelyzer"]
}
